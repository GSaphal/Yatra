<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="5dp"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtclose3"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:textColor="@color/black"
            android:text="X"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:gravity="center"
            android:background="@drawable/circlebackground"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/popup_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-150dp"
                android:src="@drawable/c"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Package 3"
                android:textColor="@color/nblack"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-135dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22 days"
                android:textColor="@color/nblack"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"/>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:background="@color/orange"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="100dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2500$"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        />
                </LinearLayout>

                <LinearLayout
                    android:background="@color/bluelight"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="100dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kathmandu-Pokhara-Annapurna-Chitwan"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        />

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Day 1: Arrival in Kathmandu"
                    android:textSize="12sp"
                    android:textColor="@color/nblack"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Day 2: 1 Day Sightseeing Tour of Kathmandu"
                    android:textSize="12sp"
                    android:textColor="@color/nblack"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Day 3: Sightseeing in Bouthanath Stupa,Pashupatinath Temple"
                    android:textSize="12sp"
                    android:textColor="@color/nblack"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Day 4: Flight to Pokhara and Annapurna Base Camp Trek"
                    android:textSize="12sp"
                    android:textColor="@color/nblack"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The 12 Days Annapurna Base Camp Trek"
                    android:textSize="12sp"
                    android:textColor="@color/nblack"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Day 16: 2 Days River Rafting on Marshyangdi River"
                    android:textSize="12sp"
                    android:textColor="@color/nblack"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Day 18: 3 Days Chitwan Jungle Safari"
                    android:textSize="12sp"
                    android:textColor="@color/nblack"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Day 21: Have fun in a mountain flight"
                    android:textSize="12sp"
                    android:textColor="@color/nblack"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Day 22: A Happy Departure"
                    android:textSize="12sp"
                    android:textColor="@color/nblack"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_bookthis3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book Now"
                android:layout_marginTop="25dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_style_popup"/>



        </LinearLayout>
    </LinearLayout>
</ScrollView>